
{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Run Node Server",
		"type": "shell",
		"command": "node",
		"args": ["server.js"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "dedicated"
		},
		"options": {
		  "cwd": "${workspaceFolder}"
		}
	  },
	  {
		"label": "npm start",
		"type": "shell",
		"command": "npm",
		"args": ["start"],

		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "dedicated"
		},
		"options": {
		  "cwd": "${workspaceFolder}/react-frontend"
		}
	  }
	]
  }